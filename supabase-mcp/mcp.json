//macos
{
    "mcpServers": {
      "supabase": {
        "command": "npx",
        "args": [
          "-y",
          "@supabase/mcp-server-supabase@latest",
          "--read-only", //comment this out if you want to write to the database
          "--project-ref=<project-ref>" //replace with your project ref
        ],
        "env": {
          "SUPABASE_ACCESS_TOKEN": "<personal-access-token>" //replace with your personal access token
        }
      }
    }
  }

